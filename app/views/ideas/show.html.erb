<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@idea.picture.url, :width => 600) if @idea.picture.present? %>
</p>

<h3>Comments</h3>
<% @idea.comments.each do |comment| %>
  <div>
    <p><%= comment.content %><p>
  </div>
<% end %>
<%= render 'comments/form' %>


<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
